

datasource db {
  provider = "postgresql"
}
generator client {
  provider = "prisma-client-js"
}
enum TaskStatus {
  PENDENTE
  CONCLUIDO
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  task  Task[]
}

model Task {
  id     Int        @id @default(autoincrement())
  title  String 
  status TaskStatus @default(PENDENTE)
  userId Int 
  user   User       @relation(fields: [userId], references: [id])
  @@unique([title,userId])
}
